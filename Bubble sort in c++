
#include <iostream>
using std::cout;
void print(int arr[])
{
  for(int i=0;i<6;i++)
    cout << arr[i] <<"\t";
  cout << "\n";
}

void swap(int* a,int *b)
{
  int tmp=*a;
  *a=*b;
  *b=tmp;
}

void sort(int *arr)
{
  for(int i=0;i<5;i++)
    for(int j=0;j<5;j++)
      if(arr[j]>arr[j+1])
        swap( &arr[j],&arr[j+1]);
}
int main() 
{
  int arr[]={10,4,2,6,1,8};
  print(arr);
  sort(arr);
  print(arr);
}

        
